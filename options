pipeline {
  agent any 
  options {
    ansiColor('xterm')
    buildDiscarder(logRotator(numToKeepStr:'2'))
    disableConcurrentBuilds(abortPrevious:true)
    retry(3)
    timeout(time:5, unit: 'SECONDS')
    timestamps()
  }
  stages {
    stage('build') {
      steps {
        scripts {
          sh 'sleep 10'
          echo "hello"
        }

      }
    }
  }
}
